#!/usr/bin/env ruby

require_relative '../lib/keylab_init'
require_relative '../lib/keylab_net'

#
# GitLab shell check task
#

puts "\nCheck directories and files: "

config = KeylabConfig.new
dirs = [config.auth_file]

dirs.each do |dir|
  print "\t#{dir}: "
  if File.exists?(dir)
    print 'OK'
  else
    puts "FAILED"
  end
  puts "\n"
end
